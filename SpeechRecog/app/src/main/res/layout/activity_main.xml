<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/home_ack"
    android:orientation="vertical">

    <ImageView
        android:layout_width="189sp"
        android:layout_height="189sp"
        android:src="@drawable/main_logo"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="24dp"
            android:background="@drawable/sec_border">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend"
                android:text="@string/welcome_to_saathi"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <View
                android:layout_width="216dp"
                android:layout_height="3dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:background="@color/Scarlet" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="198dp"
                android:fontFamily="@font/lexend"
                android:text="@string/welcome_paragraph"
                android:textSize="15sp"
                android:padding="3dp"
                android:layout_marginTop="15dp"
                android:justificationMode="inter_word"
                android:textColor="@color/black"
                />

            <Button
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Start Capture"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/baseline_camera_24"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>